@model IEnumerable<CallLogSystem.Models.CallLog>
@{
}

<div class="container-fluid">
    <div class="text-end">
        <a class="btn btn-success " asp-controller="CallLog" asp-action="Create">Add Problem Details</a>
    </div>
    <br />

    <table class="table table-hover table-responsive table-bordered table-responsive-sm">
        <thead>
            <tr class="text-primary text-center">

                <th>
                    S.No
                </th>

                <th>
                    Problem
                </th>
                <th>
                    Nature of Problem
                </th>
                <th>
                    Location
                </th>
                <th>
                    Issue Date
                </th>
                <th>
                    Priority
                </th>
                <th>
                    Reported By
                </th>

                <th>
                    Issue Resolved
                </th>
                <th>
                    Action taken
                </th>
                <th>
                    Remarks
                </th>
                <th>
                    Case Status
                </th>
                <th colspan="3">Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var call in Model)
            {
                <tr>
                    <td>@call.Id</td>
                    <td>@call.Problem</td>

                    <td>@call.Description</td>

                    <td>@call.Location</td>

                    <td>@call.IssueDate</td>

                    <td>@call.Priority</td>

                    <td>@call.ReportedBy</td>

                    <td>@call.ActionTaken</td>
                    <td>@call.Remarks</td>
                    <td>
                        @if (@call.IssueResolved == true)
                        {
                            <span class="badge bg-success">Case Resolved</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Not Resolved</span>
                        }
                    </td>
                    <td>
                        @if (@call.IsActive == true)
                        {
                            <span class="badge bg-success">Open</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Close</span>
                        }

                    </td>



                    <td> <a class="btn btn-sm btn-info" asp-route-Id="@call.Id" asp-action="ViewProblemDetails" asp-controller="CallLog">View</a>
                         <a class="btn btn-sm btn-warning" asp-route-Id="@call.Id" asp-action="Edit" asp-controller="CallLog">Edit</a>
                         <a class="btn btn-sm btn-danger" asp-route-Id="@call.Id" asp-action="Delete" asp-controller="CallLog">Delete</a>
                     </td>


                </tr>

            }
        </tbody>
    </table>
</div>

